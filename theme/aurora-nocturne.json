{
    "$schema": "vscode://schemas/color-theme",
    "name": "Aurora Nocturne",
    "author": "Aurora Themes",
    "semanticClass": "theme.aurora-nocturne",
    "semanticHighlighting": true,
    "colors": {
        // ТЕРМИНАЛ (16 ANSI цветов + фон/передний план)
        "terminal.background": "#0b0f1c",
        "terminal.foreground": "#e8f4ff",
        "terminal.ansiBlack": "#070a14",
        "terminal.ansiRed": "#d16ba5",
        "terminal.ansiGreen": "#00f5d4",
        "terminal.ansiYellow": "#f0f8ff",
        "terminal.ansiBlue": "#5dade2",
        "terminal.ansiMagenta": "#8a2be2",
        "terminal.ansiCyan": "#00f5d4",
        "terminal.ansiWhite": "#e8f4ff",
        "terminal.ansiBrightBlack": "#7a8cb0",
        "terminal.ansiBrightRed": "#ff79c6",
        "terminal.ansiBrightGreen": "#50fa7b",
        "terminal.ansiBrightYellow": "#f8f8f2",
        "terminal.ansiBrightBlue": "#8be9fd",
        "terminal.ansiBrightMagenta": "#bd93f9",
        "terminal.ansiBrightCyan": "#8be9fd",
        "terminal.ansiBrightWhite": "#ffffff",

        // ОСНОВНЫЕ ЭЛЕМЕНТЫ ИНТЕРФЕЙСА
        "focusBorder": "#00f5d4",
        "foreground": "#e8f4ff",
        "selection.background": "#00f5d440",
        "errorForeground": "#d16ba5",

        // КНОПКИ И ЭЛЕМЕНТЫ УПРАВЛЕНИЯ
        "button.background": "#8a2be2",
        "button.foreground": "#f0f8ff",
        "button.hoverBackground": "#9d4edd",
        "button.secondaryBackground": "#5dade2",
        "button.secondaryForeground": "#0b0f1c",
        "button.secondaryHoverBackground": "#74c0fc",
        "dropdown.background": "#0e1224",
        "dropdown.border": "#7a8cb0",
        "dropdown.foreground": "#e8f4ff",

        // ПОЛЯ ВВОДА
        "input.background": "#0e1224",
        "input.foreground": "#e8f4ff",
        "input.border": "#7a8cb0",
        "input.placeholderForeground": "#7a8cb0",
        "inputOption.activeBorder": "#00f5d4",
        "inputValidation.infoBorder": "#5dade2",
        "inputValidation.warningBorder": "#f0f8ff",
        "inputValidation.errorBorder": "#d16ba5",

        // ЗНАЧКИ И ПРОГРЕСС
        "badge.foreground": "#0b0f1c",
        "badge.background": "#00f5d4",
        "progressBar.background": "#8a2be2",

        // СПИСКИ
        "list.activeSelectionBackground": "#00f5d420",
        "list.activeSelectionForeground": "#f0f8ff",
        "list.dropBackground": "#8a2be230",
        "list.focusBackground": "#00f5d415",
        "list.highlightForeground": "#00f5d4",
        "list.hoverBackground": "#0e122415",
        "list.inactiveSelectionBackground": "#7a8cb015",
        "list.warningForeground": "#f0f8ff",
        "list.errorForeground": "#d16ba5",

        // ПАНЕЛЬ АКТИВНОСТИ
        "activityBar.background": "#070a14",
        "activityBar.inactiveForeground": "#7a8cb0",
        "activityBar.foreground": "#00f5d4",
        "activityBar.activeBorder": "#00f5d4",
        "activityBar.activeBackground": "#00f5d410",
        "activityBarBadge.background": "#8a2be2",
        "activityBarBadge.foreground": "#f0f8ff",

        // БОКОВАЯ ПАНЕЛЬ
        "sideBar.background": "#0e1224",
        "sideBarTitle.foreground": "#e8f4ff",
        "sideBarSectionHeader.background": "#070a14",
        "sideBarSectionHeader.border": "#7a8cb020",
        "sideBarSectionHeader.foreground": "#b8c8e0",

        // ГРУППЫ РЕДАКТОРОВ И ВКЛАДКИ
        "editorGroup.border": "#7a8cb020",
        "editorGroup.dropBackground": "#8a2be220",
        "editorGroupHeader.tabsBackground": "#070a14",
        "tab.activeBackground": "#0b0f1c",
        "tab.activeForeground": "#e8f4ff",
        "tab.border": "#070a14",
        "tab.activeBorderTop": "#00f5d4",
        "tab.inactiveBackground": "#070a14",
        "tab.inactiveForeground": "#7a8cb0",
        "tab.hoverBackground": "#0e1224",

        // РЕДАКТОР
        "editor.foreground": "#e8f4ff",
        "editor.background": "#0b0f1c",
        "editorLineNumber.foreground": "#7a8cb0",
        "editorLineNumber.activeForeground": "#b8c8e0",
        "editor.selectionBackground": "#00f5d430",
        "editor.selectionHighlightBackground": "#00f5d420",
        "editor.foldBackground": "#8a2be215",
        "editor.wordHighlightBackground": "#5dade220",
        "editor.wordHighlightStrongBackground": "#00f5d425",
        "editor.findMatchBackground": "#d16ba540",
        "editor.findMatchHighlightBackground": "#d16ba525",
        "editor.findRangeHighlightBackground": "#8a2be215",
        "editor.hoverHighlightBackground": "#00f5d415",
        "editor.lineHighlightBorder": "#7a8cb015",
        "editorLink.activeForeground": "#5dade2",
        "editor.rangeHighlightBackground": "#00f5d410",

        // ПОДСВЕТКА СКОБОК
        "editorBracketHighlight.foreground1": "#00f5d4",
        "editorBracketHighlight.foreground2": "#8a2be2",
        "editorBracketHighlight.foreground3": "#d16ba5",
        "editorBracketHighlight.foreground4": "#5dade2",
        "editorBracketHighlight.foreground5": "#f0f8ff",
        "editorBracketHighlight.foreground6": "#b8c8e0",
        "editorBracketHighlight.unexpectedBracket.foreground": "#d16ba5",

        // ОБЗОРНАЯ ЛИНЕЙКА
        "editorOverviewRuler.border": "#070a14",
        "editorOverviewRuler.selectionHighlightForeground": "#00f5d4",
        "editorOverviewRuler.wordHighlightForeground": "#5dade2",
        "editorOverviewRuler.wordHighlightStrongForeground": "#00f5d4",
        "editorOverviewRuler.modifiedForeground": "#8a2be2",
        "editorOverviewRuler.addedForeground": "#00f5d4",
        "editorOverviewRuler.deletedForeground": "#d16ba5",
        "editorOverviewRuler.errorForeground": "#d16ba5",
        "editorOverviewRuler.warningForeground": "#f0f8ff",
        "editorOverviewRuler.infoForeground": "#5dade2",

        // ОШИБКИ И ПРЕДУПРЕЖДЕНИЯ
        "editorError.foreground": "#d16ba5",
        "editorWarning.foreground": "#f0f8ff",
        "editorInfo.foreground": "#5dade2",
        "editorGutter.modifiedBackground": "#8a2be2",
        "editorGutter.addedBackground": "#00f5d4",
        "editorGutter.deletedBackground": "#d16ba5",

        // GIT ДЕКОРАЦИИ
        "gitDecoration.modifiedResourceForeground": "#8a2be2",
        "gitDecoration.deletedResourceForeground": "#d16ba5",
        "gitDecoration.untrackedResourceForeground": "#00f5d4",
        "gitDecoration.ignoredResourceForeground": "#7a8cb0",
        "gitDecoration.conflictingResourceForeground": "#f0f8ff",

        // DIFF РЕДАКТОР
        "diffEditor.insertedTextBackground": "#00f5d420",
        "diffEditor.removedTextBackground": "#d16ba520",

        // ВИДЖЕТЫ РЕДАКТОРА
        "editorWidget.background": "#0e1224",
        "editorWidget.border": "#7a8cb0",
        "editorSuggestWidget.background": "#0e1224",
        "editorSuggestWidget.foreground": "#e8f4ff",
        "editorSuggestWidget.selectedBackground": "#00f5d420",
        "editorHoverWidget.background": "#0e1224",
        "editorHoverWidget.border": "#00f5d4",

        // ПАНЕЛИ
        "panel.background": "#070a14",
        "panel.border": "#7a8cb020",
        "panelTitle.activeBorder": "#00f5d4",
        "panelTitle.activeForeground": "#e8f4ff",
        "panelTitle.inactiveForeground": "#7a8cb0",

        // СТАТУС БАР
        "statusBar.background": "#070a14",
        "statusBar.foreground": "#b8c8e0",
        "statusBar.debuggingBackground": "#8a2be2",
        "statusBar.debuggingForeground": "#f0f8ff",
        "statusBar.noFolderBackground": "#070a14",
        "statusBar.noFolderForeground": "#7a8cb0",
        "statusBarItem.prominentBackground": "#00f5d4",
        "statusBarItem.prominentForeground": "#0b0f1c",
        "statusBarItem.prominentHoverBackground": "#50fa7b",
        "statusBarItem.remoteForeground": "#0b0f1c",
        "statusBarItem.remoteBackground": "#5dade2",

        // ЗАГОЛОВОК ОКНА
        "titleBar.activeBackground": "#070a14",
        "titleBar.activeForeground": "#e8f4ff",
        "titleBar.inactiveBackground": "#070a14",
        "titleBar.inactiveForeground": "#7a8cb0",

        // НАСТРОЙКИ
        "settings.headerForeground": "#e8f4ff",
        "settings.modifiedItemIndicator": "#8a2be2",
        "settings.dropdownBackground": "#0e1224",
        "settings.dropdownForeground": "#e8f4ff",
        "settings.dropdownBorder": "#7a8cb0",
        "settings.checkboxBackground": "#0e1224",
        "settings.checkboxForeground": "#00f5d4",
        "settings.checkboxBorder": "#7a8cb0",
        "settings.textInputBackground": "#0e1224",
        "settings.textInputForeground": "#e8f4ff",
        "settings.textInputBorder": "#7a8cb0",
        "settings.numberInputBackground": "#0e1224",
        "settings.numberInputForeground": "#e8f4ff",
        "settings.numberInputBorder": "#7a8cb0",

        // ХЛЕБНЫЕ КРОШКИ
        "breadcrumb.foreground": "#7a8cb0",
        "breadcrumb.background": "#0b0f1c",
        "breadcrumb.focusForeground": "#e8f4ff",
        "breadcrumb.activeSelectionForeground": "#00f5d4",
        "breadcrumbPicker.background": "#0e1224"
    },
    "tokenColors": [
        // БАЗОВОЕ ФОРМАТИРОВАНИЕ
        {
            "scope": ["emphasis"],
            "settings": {"fontStyle": "italic"}
        },
        {
            "scope": ["strong"],
            "settings": {"fontStyle": "bold"}
        },
        {
            "scope": ["header"],
            "settings": {"foreground": "#00f5d4"}
        },

        // КОММЕНТАРИИ
        {
            "name": "Comments",
            "scope": ["comment", "punctuation.definition.comment"],
            "settings": {"foreground": "#7a8cb0", "fontStyle": "italic"}
        },
        {
            "name": "JSDoc keywords",
            "scope": ["comment keyword.codetag.notation", "comment.block.documentation keyword"],
            "settings": {"foreground": "#b8c8e0"}
        },

        // СТРОКИ
        {
            "name": "Strings",
            "scope": ["string"],
            "settings": {"foreground": "#00f5d4"}
        },
        {
            "name": "String quotes",
            "scope": ["punctuation.definition.string.begin", "punctuation.definition.string.end"],
            "settings": {"foreground": "#5dade2"}
        },

        // ЧИСЛА И КОНСТАНТЫ
        {
            "name": "Constants",
            "scope": ["constant", "variable.other.constant"],
            "settings": {"foreground": "#f0f8ff"}
        },
        {
            "name": "Numbers",
            "scope": ["constant.numeric"],
            "settings": {"foreground": "#d16ba5"}
        },

        // КЛЮЧЕВЫЕ СЛОВА
        {
            "name": "Keywords",
            "scope": ["keyword", "storage.type", "storage.modifier"],
            "settings": {"foreground": "#8a2be2", "fontStyle": "bold"}
        },

        // ФУНКЦИИ
        {
            "name": "Function names",
            "scope": ["entity.name.function", "meta.function-call"],
            "settings": {"foreground": "#5dade2"}
        },
        {
            "name": "Function parameters",
            "scope": ["variable.parameter"],
            "settings": {"foreground": "#b8c8e0", "fontStyle": "italic"}
        },

        // КЛАССЫ И ТИПЫ
        {
            "name": "Classes",
            "scope": ["entity.name.type.class", "entity.name.class"],
            "settings": {"foreground": "#f0f8ff"}
        },
        {
            "name": "Types",
            "scope": ["entity.name.type", "storage.type"],
            "settings": {"foreground": "#8a2be2", "fontStyle": "italic"}
        },

        // ПЕРЕМЕННЫЕ
        {
            "name": "Variables",
            "scope": ["variable"],
            "settings": {"foreground": "#e8f4ff"}
        },
        {
            "name": "Language variables",
            "scope": ["variable.language"],
            "settings": {"foreground": "#d16ba5", "fontStyle": "italic"}
        },

        // HTML/XML
        {
            "name": "HTML tags",
            "scope": ["entity.name.tag"],
            "settings": {"foreground": "#8a2be2"}
        },
        {
            "name": "HTML attributes",
            "scope": ["entity.other.attribute-name"],
            "settings": {"foreground": "#5dade2", "fontStyle": "italic"}
        },

        // CSS
        {
            "name": "CSS selectors",
            "scope": ["meta.selector"],
            "settings": {"foreground": "#00f5d4"}
        },
        {
            "name": "CSS properties",
            "scope": ["support.type.property-name"],
            "settings": {"foreground": "#5dade2"}
        },

        // ОПЕРАТОРЫ И ПУНКТУАЦИЯ
        {
            "name": "Operators",
            "scope": ["keyword.operator"],
            "settings": {"foreground": "#d16ba5"}
        },
        {
            "name": "Punctuation",
            "scope": ["punctuation"],
            "settings": {"foreground": "#b8c8e0"}
        },

        // РЕГУЛЯРНЫЕ ВЫРАЖЕНИЯ
        {
            "name": "RegExp",
            "scope": ["string.regexp"],
            "settings": {"foreground": "#f0f8ff"}
        },

        // MARKDOWN
        {
            "name": "Markdown headings",
            "scope": ["markup.heading"],
            "settings": {"foreground": "#00f5d4", "fontStyle": "bold"}
        },
        {
            "name": "Markdown bold",
            "scope": ["markup.bold"],
            "settings": {"foreground": "#f0f8ff", "fontStyle": "bold"}
        },
        {
            "name": "Markdown italic",
            "scope": ["markup.italic"],
            "settings": {"foreground": "#b8c8e0", "fontStyle": "italic"}
        },
        {
            "name": "Markdown links",
            "scope": ["markup.underline.link"],
            "settings": {"foreground": "#5dade2"}
        },
        {
            "name": "Markdown code",
            "scope": ["markup.inline.raw"],
            "settings": {"foreground": "#8a2be2"}
        },

        // НЕДЕЙСТВИТЕЛЬНЫЙ КОД
        {
            "name": "Invalid",
            "scope": ["invalid"],
            "settings": {"foreground": "#d16ba5", "fontStyle": "underline"}
        },
        {
            "name": "Deprecated",
            "scope": ["invalid.deprecated"],
            "settings": {"foreground": "#7a8cb0", "fontStyle": "strikethrough"}
        }
    ]
}
